<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            description="Commands contributed by the TLC model checker"
            id="org.lamport.tla.toolbox.tool.tlc.commands.category"
            name="TLC Commands">
      </category>
      <command
            categoryId="org.lamport.tla.toolbox.tool.tlc.commands.category"
            description="Re-runs TLC on the model last launched."
            id="org.lamport.tla.toolbox.tool.tlc.commands.launch"
            name="Re-Launch TLC">
      </command>
      <command
            categoryId="org.lamport.tla.toolbox.tool.tlc.commands.category"
            description="Creates a new model for current specification."
            id="org.lamport.tla.toolbox.tool.tlc.commands.modellaunch.new"
            name="New Model...">
      </command>
      <command
            categoryId="org.lamport.tla.toolbox.tool.tlc.commands.category"
            description="Opens existing model for current specification."
            id="org.lamport.tla.toolbox.tool.tlc.commands.modellaunch.open"
            name="Open Launch...">
         <commandParameter
               id="org.lamport.tla.toolbox.tool.tlc.commands.modellaunch.open.param"
               name="modelLaunchName"
               optional="true">
         </commandParameter>
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="org.lamport.tla.toolbox.tool.tlc.commands.launch"
            class="org.lamport.tla.toolbox.tool.tlc.handlers.TLCLaunchHandler">
      </handler>
      <handler
            class="org.lamport.tla.toolbox.tool.tlc.handlers.NewModelHandler"
            commandId="org.lamport.tla.toolbox.tool.tlc.commands.modellaunch.new">
      </handler>
      <handler
            class="org.lamport.tla.toolbox.tool.tlc.handlers.OpenModelHandler"
            commandId="org.lamport.tla.toolbox.tool.tlc.commands.modellaunch.open">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.lamport.tla.toolbox.tool.tlc.commands.launch"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:toolbox.tools.menu?after=toolbox.tools.separator">
         <command
               commandId="org.lamport.tla.toolbox.tool.tlc.commands.launch"
               id="toolbox.tool.tlc.launch"
               mnemonic="C">
            <visibleWhen
                  checkEnabled="true">
               <with
                     variable="activeWorkbenchWindow.activePerspective">
                  <not>
                     <equals
                           value="org.lamport.tla.toolbox.ui.perspective.problems">
                     </equals>
                  </not>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="menu:toolbox.tools.menu?after=toolbox.toolmenus.separator">
         <menu
               label="MC Launch"
               mnemonic="M"
               id="org.lamport.tla.toolbox.tool.tlc.menus.mcLaunch">
            <command
                  commandId="org.lamport.tla.toolbox.tool.tlc.commands.modellaunch.new"
                  id="toolbox.tool.tlc.modellaunch.new"
                  mnemonic="N">
               <visibleWhen
                     checkEnabled="true">
                  <with
                        variable="activeWorkbenchWindow.activePerspective">
                     <not>
                        <equals
                              value="org.lamport.tla.toolbox.ui.perspective.problems">
                        </equals>
                     </not>
                  </with>
               </visibleWhen>
            </command>
            <menu
                  id="toolbox.tool.tlc.modellaunch.open"
                  label="Open Model Launch"
                  mnemonic="O">
               <visibleWhen
                     checkEnabled="true">
                  <with
                        variable="activeWorkbenchWindow.activePerspective">
                     <equals
                           value="org.lamport.tla.toolbox.ui.perspective.specLoaded">
                     </equals>
                  </with>
               </visibleWhen>
               <dynamic
                     class="org.lamport.tla.toolbox.tool.tlc.launch.ui.ModelContributionItem"
                     id="toolbox.tool.tlc.model.open.dynamic">
               </dynamic>
            </menu>
         </menu>
      </menuContribution>
   </extension>
   
   <extension
         point="org.lamport.toolbox.tool">
      <tool
            name="TLC"
            classname="org.lamport.tla.toolbox.tool.tlc.TLCActivator"
            >
      </tool>
   </extension>
   
   <extension
         point="org.eclipse.debug.core.launchConfigurationTypes">
      <launchConfigurationType
            id="org.lamport.tla.toolbox.tool.tlc.modelCheck"
            delegate="org.lamport.tla.toolbox.tool.tlc.launch.TLCModelLaunchDelegate"
            modes="modelcheck"
            name="TLC Modelcheck"
            public="true"
            delegateName="TLC ModelChecker"
            delegateDescription="TLC Model Checker is usefull to find bugs in the specification"
      >
      </launchConfigurationType>
      <launchConfigurationType
            delegate="org.lamport.tla.toolbox.tool.tlc.launch.TLCSimulateLaunchDelegate"
            delegateDescription="TLC Model Checker is usefull to find bugs in the specification"
            delegateName="TLC ModelChecker"
            id="org.lamport.tla.toolbox.tool.tlc.simulate"
            modes="simulate"
            name="TLC Simulation"
            public="true">
      </launchConfigurationType>
   </extension>
   
   <extension point="org.eclipse.debug.core.launchModes">
      <launchMode mode="modelcheck" label="Model Check" launchAsLabel="Check As"></launchMode>
      <launchMode mode="simulate" label="Simulate" launchAsLabel="Simulate As"></launchMode>
   </extension>
   <extension
         point="org.eclipse.ui.console.consoleFactories">
      <consoleFactory
            class="org.lamport.tla.toolbox.tool.tlc.ui.ConsoleFactory"
            icon="icons/full/console_view2.gif"
            label="TLC Console">
      </consoleFactory>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.lamport.tla.toolbox.tool.tlc.ui.TLCPerspective"
            id="org.lamport.tla.toolbox.tool.tlc.perspective"
            name="TLC Run Perspective">
      </perspective>
   </extension>
   
   
   
</plugin>
